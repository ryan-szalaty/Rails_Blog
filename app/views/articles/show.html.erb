<%= render "shared/header"%>
<div class="container">

  <div class="card">
    <header class="card-header">
      <p class="card-header-title is-size-4">
        <%=@article.title.upcase%>
      </p>
    </header>
    <div class="card-content">
      <div class="content">
        <%=@article.body%>
        <br>
        <time class="is-italic">Logged on <%= @article.created_at.to_fs(:nice_date) %></time>
      </div>
    </div>
    <footer class="card-footer">
      <%= link_to "Back to Articles", articles_path, class: "card-footer-item" %> 
      <%= link_to "Edit Article", edit_article_path, class: "card-footer-item" %> 
      <%= link_to "Delete Article", article_path, data: {
                    turbo_method: :delete,
                    turbo_confirm: "WARNING: Are you sure you want to delete this article? You can't get it back."
                  }, class: "card-footer-item" %>
    </footer>
  </div>

  <%= render @article.comments  %>
  <%= render "comments/form" %>
</div>
<%= render "shared/footer"%>
